<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="ir.soroushtabesh.hearthstone.views.gui.controls.EditDeckDialog">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Deck Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="deckNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Hero Class:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="heroCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
