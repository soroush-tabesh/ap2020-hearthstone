<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="ir.soroushtabesh.hearthstone.views.gui.controls.SelectHeroDeckDialog">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Hero:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="heroCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Deck:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="deckCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Info Passive:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="passiveCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Or" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Button onAction="#goCollection" text="Take me to Collection" GridPane.rowIndex="4" GridPane.columnIndex="0"
                    GridPane.columnSpan="2"/>
        </GridPane>
    </content>
</DialogPane>
