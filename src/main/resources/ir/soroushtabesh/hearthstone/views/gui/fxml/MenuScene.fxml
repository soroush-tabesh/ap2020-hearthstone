        <Button fx:id="settingButton" alignment="CENTER" layoutX="561.0" layoutY="342.0" mnemonicParsing="false"
                onAction="#settingButtonAction" styleClass="menu_button" text="Setting"/>
        <Button fx:id="collectionButton" alignment="CENTER" layoutX="609.0" layoutY="653.0" mnemonicParsing="false"
                onAction="#collectionButtonAction" styleClass="menu_button" text="Collection"/>
