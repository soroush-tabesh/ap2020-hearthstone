                <Region maxHeight="-Infinity" maxWidth="200.0" minHeight="-Infinity" minWidth="0.0"
                        HBox.hgrow="ALWAYS"/>
                <ImageView fitHeight="24.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../image/gold.png"/>
                    </image>
                </ImageView>
            </children>
            <rotationAxis>
                <Point3D x="0.5" y="0.5" z="0.5"/>
            </rotationAxis>
        </HBox>
    </children>

</AnchorPane>
